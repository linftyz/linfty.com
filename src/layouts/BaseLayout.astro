---
import Head from "@/components/layout/Head.astro";
import type { HeadProps } from "@/types";
import "@/styles/global.css";
import Umami from "@/components/analytics/Umami.astro";

type Props = HeadProps;

const head = Astro.props;
---

<html lang="en">
  <Head {...head} />
  <body
    class="flex min-h-screen items-center justify-center bg-background p-2 font-display text-foreground antialiased selection:bg-primary/20 md:p-6"
  >
    <slot />

    <Umami />
  </body>
</html>
