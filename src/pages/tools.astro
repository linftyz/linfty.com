---
import Layout from "@/layouts/Layout.astro";

const stack = [
  {
    name: "coding & tools",
    items: [
      "VS Code",
      "Ghostty Terminal",
      "Chrome Browser",
      "Raycast",
      "Obsidian",
      "Wins",
      "Snipaste",
    ],
  },
  {
    name: "ai",
    items: ["Claude Code", "Monica", "Youmind"],
  },
  {
    name: "hardwares",
    items: ["Mac mini m2", "Magic Keyboard", "ROG Keris I Origin Gaming Mouse"],
  },
];
---

<Layout title="工具箱" description="一些常用的工具">
  <div class="mx-auto max-w-2xl p-8 md:p-16">
    <h2 class="mb-12 text-3xl font-bold">工具箱 / Stack</h2>

    <div class="space-y-12">
      {
        stack.map((category) => (
          <section>
            <h3 class="mb-6 border-b border-border pb-2 text-[10px] font-bold tracking-[0.2em] text-primary uppercase">
              {category.name}
            </h3>
            <ul class="grid grid-cols-2 gap-4 text-sm font-light text-muted-foreground">
              {category.items.map((item) => (
                <li class="flex items-center gap-2">
                  <span class="h-1 w-1 rounded-full bg-primary" /> {item}
                </li>
              ))}
            </ul>
          </section>
        ))
      }
    </div>
  </div>
</Layout>
