---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="工具箱" description="一些常用的工具">
  <div class="mx-auto max-w-2xl p-8 md:p-16">
    <h2 class="mb-12 text-2xl font-bold">利器 / Stack</h2>

    <div class="space-y-12">
      <!-- 开发环境 -->
      <section>
        <h3
          class="mb-6 border-b border-border pb-2 text-[10px] font-bold tracking-[0.2em] text-primary uppercase"
        >
          Coding & Tools
        </h3>
        <ul
          class="grid grid-cols-2 gap-4 text-sm font-light text-muted-foreground"
        >
          <li class="flex items-center gap-2">
            <span class="h-1 w-1 rounded-full bg-primary"></span> VS Code / Cursor
          </li>
          <li class="flex items-center gap-2">
            <span class="h-1 w-1 rounded-full bg-primary"></span> Warp Terminal
          </li>
          <li class="flex items-center gap-2">
            <span class="h-1 w-1 rounded-full bg-primary"></span> Arc Browser
          </li>
          <li class="flex items-center gap-2">
            <span class="h-1 w-1 rounded-full bg-primary"></span> Figma (Design)
          </li>
        </ul>
      </section>

      <!-- 硬件设备 -->
      <section>
        <h3
          class="mb-6 border-b border-border pb-2 text-[10px] font-bold tracking-[0.2em] text-primary uppercase"
        >
          Hardware
        </h3>
        <ul
          class="grid grid-cols-2 gap-4 text-sm font-light text-muted-foreground"
        >
          <li class="flex items-center gap-2">MacBook Pro M3 Max</li>
          <li class="flex items-center gap-2">HHKB Professional HYBRID</li>
          <li class="flex items-center gap-2">Sony WH-1000XM5</li>
        </ul>
      </section>
    </div>
  </div>
</Layout>
