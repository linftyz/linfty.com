---
import PostPreview from "@/components/blocks/PostPreview.astro";
import { getRecentPosts } from "@/utils/post";
import { Icon } from "astro-icon/components";

const recentPosts = await getRecentPosts(5);
---

<section>
  <div class="mb-8 flex items-center justify-between">
    <p
      class="text-[11px] font-bold tracking-[0.4em] text-muted-foreground uppercase opacity-60"
    >
      最近发布 / Latest
    </p>
    <a
      href="/posts"
      class="flex items-center gap-1 border-b border-transparent text-[11px] text-muted-foreground hover:border-primary hover:text-primary"
      >查看全部 <Icon name="mdi:arrow-right" /></a
    >
  </div>

  <div class="space-y-1">
    {recentPosts.map((post) => <PostPreview post={post} />)}
  </div>
</section>
