<div
  id="toast-container"
  class="pointer-events-none fixed bottom-12 left-1/2 z-999 flex -translate-x-1/2 flex-col items-center gap-3"
>
</div>

<script>
  class SageToast {
    // 1. 定义不同类型对应的配置
    private static config = {
      success: {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>',
        color: "var(--callout-success)",
        label: "成功",
      },
      error: {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>',
        color: "var(--callout-danger)",
        label: "错误",
      },
      warning: {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>',
        color: "var(--callout-warning)",
        label: "注意",
      },
      info: {
        icon: '<path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
        color: "var(--callout-info)",
        label: "提示",
      },
    };

    static show(
      message: string,
      type: "success" | "error" | "warning" | "info" = "success",
    ) {
      const container = document.getElementById("toast-container");
      if (!container) return;

      const settings = this.config[type] || this.config.success;
      const toast = document.createElement("div");

      // 样式细节：使用 2.5rem 大圆角，背景使用对应颜色的 10% 透明度以护眼
      toast.className = `
        flex items-center gap-3 px-6 py-3 rounded-[2.5rem] 
        bg-card border-2 shadow-main
        animate-in pointer-events-auto backdrop-blur-md
      `;

      // 动态设置边框颜色
      toast.style.borderColor = `oklch(from ${settings.color} l c h / 0.3)`;

      toast.innerHTML = `
        <div class="w-6 h-6 rounded-full flex items-center justify-center" style="background: oklch(from ${settings.color} l c h / 0.15); color: ${settings.color}">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">${settings.icon}</svg>
        </div>
        <div class="flex flex-col">
          <span class="text-xs font-bold uppercase tracking-tighter opacity-40" style="color: ${settings.color}">${settings.label}</span>
          <span class="text-sm font-bold tracking-tight text-foreground/90">${message}</span>
        </div>
      `;

      container.appendChild(toast);

      // 3.5秒后优雅消失
      setTimeout(() => {
        toast.style.opacity = "0";
        toast.style.transform = "translateY(-1rem) scale(0.9)";
        toast.style.transition = "all 0.5s cubic-bezier(0.4, 0, 0.2, 1)";
        setTimeout(() => toast.remove(), 500);
      }, 3500);
    }
  }

  // 挂载全局
  (window as any).showToast = (
    msg: string,
    type: "success" | "error" | "warning" | "info" = "success",
  ) => SageToast.show(msg, type);
</script>

<style is:global>
  @keyframes toast-in {
    from {
      opacity: 0;
      transform: translateY(1.5rem) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .animate-in {
    animation: toast-in 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }
</style>
