---
import type { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;
const toc = headings.filter((h) => h.depth > 1 && h.depth < 4);
---

{
  toc.length > 0 && (
    <div class="not-prose animate-in fade-in my-12 duration-700">
      <details class="group rounded-3xl border border-border/50 bg-muted/20 transition-all duration-500 open:bg-muted/30">
        <summary class="flex cursor-pointer list-none items-center justify-between px-7 py-4 select-none">
          <div class="flex items-center gap-5">
            <div class="flex w-4 flex-col gap-1 opacity-40 transition-opacity group-open:opacity-100">
              <span class="h-[1.5px] w-4 rounded-full bg-primary" />
              <span class="h-[1.5px] w-3 rounded-full bg-primary" />
              <span class="h-[1.5px] w-4 rounded-full bg-primary" />
            </div>

            <div class="flex flex-col gap-0.5">
              <span class="text-sm font-bold tracking-tight text-foreground/90">
                文章目录
              </span>
              <span class="text-[9px] font-black tracking-[0.2em] text-muted-foreground/40 uppercase">
                Table of contents
              </span>
            </div>
          </div>

          <div class="text-muted-foreground/30 transition-transform duration-500 group-open:rotate-180">
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="3"
            >
              <path d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </summary>

        <nav class="px-8 pt-2 pb-8">
          <div class="flex flex-col gap-1">
            {toc.map((heading) => (
              <a
                href={`#${heading.slug}`}
                class={`relative rounded-xl px-4 py-2.5 transition-all duration-300 hover:bg-primary/5 hover:text-primary ${
                  heading.depth === 2
                    ? "text-[14px] font-bold text-foreground/80"
                    : "ml-6 text-[13px] font-medium text-muted-foreground/50"
                } `}
              >
                {heading.text}
              </a>
            ))}
          </div>
        </nav>
      </details>
    </div>
  )
}

<style>
  summary::-webkit-details-marker {
    display: none;
  }
  summary:focus {
    outline: none;
  }

  details[open] nav {
    animation: contentReveal 0.4s cubic-bezier(0.2, 1, 0.3, 1);
  }

  @keyframes contentReveal {
    from {
      opacity: 0;
      transform: translateY(-5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
