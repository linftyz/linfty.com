---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

<figure class="switch-animation relative rounded-md text-center">
  <Image
    src={src}
    alt={alt}
    width={672}
    height={"10"}
    loading={"eager"}
    class={"rounded-md border border-border"}
  />
  {
    alt && (
      <figcaption class="mt-0 block rounded-tr-md px-2 py-2 text-center text-xs font-bold">
        {alt}
      </figcaption>
    )
  }
</figure>
