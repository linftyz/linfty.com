---
import { Icon } from "astro-icon/components";
---

<div class="mb-4">
  <button
    id="search-trigger"
    class="group flex w-full items-center justify-between rounded-xl border border-border/50 bg-muted/30 px-3 py-3 text-muted-foreground transition-all hover:border-primary/30 hover:text-primary"
    title="search trigger"
  >
    <div class="flex items-center gap-2">
      <Icon name="mdi:search" />
      <span class="text-xs font-medium">搜索 / Search</span>
    </div>
    <kbd
      class="hidden items-center gap-1 rounded border border-border/50 px-1.5 py-0.5 font-display text-[12px] opacity-50 md:flex"
    >
      <Icon name="mdi:apple-keyboard-command" size={12} /> K
    </kbd>
  </button>
</div>
