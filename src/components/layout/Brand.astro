---
import site from "@/config/site";
import { Image } from "astro:assets";
---

<div
  class="mb-8 flex items-center gap-4 md:mb-14 md:flex-col md:items-start md:gap-0"
>
  <div
    class="flex h-10 w-10 items-center justify-center rounded-xl bg-muted text-lg font-bold text-primary-foreground md:h-11 md:w-11"
  >
    <Image
      loading={"eager"}
      src={site.meta.logo}
      alt={"本站的Logo"}
      width={50}
      height={50}
    />
  </div>
  <div class="md:mt-8">
    <h1 class="text-lg font-bold tracking-tight text-foreground md:text-xl">
      {site.meta.title}
    </h1>
    <p
      class="mt-2 hidden text-[10px] font-black tracking-[0.3em] text-muted-foreground uppercase opacity-70 md:block"
    >
      {site.meta.description}
    </p>
  </div>
</div>
