---
import { UMAMI_URL, UMAMI_WEBSITE_ID } from "astro:env/server";

interface Props {
  enable?: boolean;
  src?: string;
  websiteId?: string;
}

const {
  enable = true,
  src = UMAMI_URL,
  websiteId = UMAMI_WEBSITE_ID,
} = Astro.props;
---

{
  import.meta.env.PROD && enable && (
    <script defer src={src} data-website-id={websiteId} />
  )
}
